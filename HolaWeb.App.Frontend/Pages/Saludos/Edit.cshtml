@page
@model HolaWeb.App.Frontend.Pages.EditModel
@{
}

<h2>Edición de los Datos Personales:@Model.Saludo.EnEspanol</h2>
<form method="post">
    <input type="hidden" asp-for="Saludo.Id"/> <!--para enlazar el id con el id de la propiedad modelo -->
    <div class="form-group">
        <label asp-for="Saludo.EnEspanol">Nombre</label>
        <input asp-for="Saludo.EnEspanol" class="form-control">
        <span class="text-danger" asp-validation-for="Saludo.EnEspanol"></span>
    </div>
    <div class="form-group">
        <label asp-for="Saludo.EnIngles">Cedula</label>
        <input asp-for="Saludo.EnIngles" class="form-control">
        <span class="text-danger" asp-validation-for="Saludo.EnIngles"></span>
    </div>
    <div class="form-group">
        <label asp-for="Saludo.EnItaliano">Celular</label>
        <input asp-for="Saludo.EnItaliano" class="form-control">
        <span class="text-danger" asp-validation-for="Saludo.EnItaliano"></span>
    </div>
        <button type="submit" class="btn btn-primary">Grabar</button>
    </form>
    <a asp-page="./List" class="btn-default">Datos Personales</a>

